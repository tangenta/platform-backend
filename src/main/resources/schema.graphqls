
type Query {
    users: [User!]!
}

type Mutation {
    login(username: String!, password: String!): LoginResult
}

schema {
    query: Query
    mutation: Mutation
}

type ErrorContainer {
    messages: [String!]!
}

type LoginPayload {
    user: User!
    token: String
}

union LoginResult = LoginPayload | ErrorContainer